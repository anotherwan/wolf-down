<!DOCTYPE html>
<html>
  <% include ./partials/_html_head %>
<body>
  <% include ./partials/_header %>
<div class="row">
  <h2 class="left red-text col offset-m2"> Menu </h2>
</div>
<div class="row">
  <div class="container">
    <ul class="collapsible popout col s6 m6" data-collapsible="accordion">
      <% for (let item in results) { %>
      <li>
        <div class="collapsible-header"><%= results[item].dish_name %>
        </div>
        <div class="collapsible-body"><p><%= results[item].dish_description %></p> <p><%= results[item].price %></p>
          <a class="btn" action="/menu/cart" onclick="Materialize.toast('<%= results[item].dish_name %> Added To Cart!', 4000)">Add</a>
        </div>
      </li>
      <% } %>
    </ul>
  </div>
    <div class="right col s6 m4 offset-m2">
      <div class="container">
        <section>
          <!-- CART GOES HERE -->
        </section>
    </div>
  </div>
  <div class="row">
    <div class="container col s12 m12">
      <br>
      <button class="btn waves-effect waves-green col offset-m6" type="submit" name="action">Checkout Now</button>
    </div>
  </div>
</div>

</body>
</html>
